{
	"info": {
		"_postman_id": "consultant-working-hours-api",
		"name": "Consultant Working Hours API",
		"description": "API لإدارة ساعات عمل المستشارين",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000/api",
			"type": "string"
		},
		{
			"key": "token",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.data && jsonData.data.token) {",
									"    pm.collectionVariables.set('token', jsonData.data.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"consultant@example.com\",\n    \"password\": \"password\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/login",
							"host": ["{{base_url}}"],
							"path": ["login"]
						}
					}
				}
			]
		},
		{
			"name": "Working Hours",
			"item": [
				{
					"name": "List All Working Hours",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/consultant/working-hours?per_page=10",
							"host": ["{{base_url}}"],
							"path": ["consultant", "working-hours"],
							"query": [
								{
									"key": "per_page",
									"value": "10"
								}
							]
						},
						"description": "جلب جميع ساعات العمل للمستشار الحالي"
					}
				},
				{
					"name": "Get Single Working Hour",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/consultant/working-hours/1",
							"host": ["{{base_url}}"],
							"path": ["consultant", "working-hours", "1"]
						},
						"description": "جلب ساعة عمل محددة بالـ ID"
					}
				},
				{
					"name": "Create Working Hour",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"day_of_week\": 0,\n    \"start_time\": \"09:00\",\n    \"end_time\": \"12:00\",\n    \"is_active\": true\n}"
						},
						"url": {
							"raw": "{{base_url}}/consultant/working-hours",
							"host": ["{{base_url}}"],
							"path": ["consultant", "working-hours"]
						},
						"description": "إنشاء ساعة عمل جديدة\n\nday_of_week:\n- 0 = الأحد\n- 1 = الإثنين\n- 2 = الثلاثاء\n- 3 = الأربعاء\n- 4 = الخميس\n- 5 = الجمعة\n- 6 = السبت"
					}
				},
				{
					"name": "Update Working Hour",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"day_of_week\": 0,\n    \"start_time\": \"10:00\",\n    \"end_time\": \"14:00\",\n    \"is_active\": true\n}"
						},
						"url": {
							"raw": "{{base_url}}/consultant/working-hours/1",
							"host": ["{{base_url}}"],
							"path": ["consultant", "working-hours", "1"]
						},
						"description": "تحديث ساعة عمل موجودة"
					}
				},
				{
					"name": "Delete Working Hour",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/consultant/working-hours/1",
							"host": ["{{base_url}}"],
							"path": ["consultant", "working-hours", "1"]
						},
						"description": "حذف ساعة عمل"
					}
				},
				{
					"name": "Activate Working Hour",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/consultant/working-hours/1/activate",
							"host": ["{{base_url}}"],
							"path": ["consultant", "working-hours", "1", "activate"]
						},
						"description": "تفعيل ساعة عمل"
					}
				},
				{
					"name": "Deactivate Working Hour",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/consultant/working-hours/1/deactivate",
							"host": ["{{base_url}}"],
							"path": ["consultant", "working-hours", "1", "deactivate"]
						},
						"description": "تعطيل ساعة عمل"
					}
				}
			]
		}
	]
}
