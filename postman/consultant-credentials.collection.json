{
  "info": {
    "_postman_id": "e8d4d5f5-2d9d-5ed1-0b4c-0b38bf76c7f9",
    "name": "Consultant Credentials (Certificates & Experiences)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection to test consultant credentials endpoints (certificates and experiences). Use an existing Sanctum bearer token in the `token` variable."
  },
  "item": [
    {
      "name": "Credentials",
      "item": [
        {
          "name": "Get all credentials",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/consultant/credentials",
              "host": ["{{base_url}}"],
              "path": ["api", "consultant", "credentials"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Certificates",
      "item": [
        {
          "name": "Add certificate",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/consultant/credentials/certificates",
              "host": ["{{base_url}}"],
              "path": ["api", "consultant", "credentials", "certificates"]
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "document_scan_copy",
                  "type": "file",
                  "src": "",
                  "description": "Certificate document (jpg, jpeg, png, pdf - max 5MB)"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Delete certificate",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/consultant/credentials/certificates/{{certificate_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "consultant", "credentials", "certificates", "{{certificate_id}}"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Experiences",
      "item": [
        {
          "name": "Add experience",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/consultant/credentials/experiences",
              "host": ["{{base_url}}"],
              "path": ["api", "consultant", "credentials", "experiences"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"خبرة في الاستشارات المالية\",\n  \"description\": \"عملت كمستشار مالي لمدة 5 سنوات في شركات متعددة\",\n  \"is_active\": true\n}"
            }
          },
          "response": []
        },
        {
          "name": "Delete experience",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/consultant/credentials/experiences/{{experience_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "consultant", "credentials", "experiences", "{{experience_id}}"]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost"
    },
    {
      "key": "token",
      "value": "",
      "description": "Sanctum bearer token for authenticated consultant"
    },
    {
      "key": "certificate_id",
      "value": "1",
      "description": "Certificate ID to delete"
    },
    {
      "key": "experience_id",
      "value": "1",
      "description": "Experience ID to delete"
    }
  ]
}
