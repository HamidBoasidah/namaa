{
	"info": {
		"_postman_id": "consultant-holidays-api",
		"name": "Consultant Holidays API",
		"description": "API لإدارة إجازات المستشارين",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000/api",
			"type": "string"
		},
		{
			"key": "token",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.data && jsonData.data.token) {",
									"    pm.collectionVariables.set('token', jsonData.data.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"consultant@example.com\",\n    \"password\": \"password\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/login",
							"host": ["{{base_url}}"],
							"path": ["login"]
						}
					}
				}
			]
		},
		{
			"name": "Holidays",
			"item": [
				{
					"name": "List All Holidays",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/consultant/holidays?per_page=10",
							"host": ["{{base_url}}"],
							"path": ["consultant", "holidays"],
							"query": [
								{
									"key": "per_page",
									"value": "10"
								}
							]
						},
						"description": "جلب جميع الإجازات للمستشار الحالي"
					}
				},
				{
					"name": "Get Single Holiday",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/consultant/holidays/1",
							"host": ["{{base_url}}"],
							"path": ["consultant", "holidays", "1"]
						},
						"description": "جلب إجازة محددة بالـ ID"
					}
				},
				{
					"name": "Create Holiday",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"holiday_date\": \"2026-02-15\",\n    \"name\": \"إجازة شخصية\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/consultant/holidays",
							"host": ["{{base_url}}"],
							"path": ["consultant", "holidays"]
						},
						"description": "إنشاء إجازة جديدة\n\nholiday_date: تاريخ الإجازة بصيغة YYYY-MM-DD (يجب أن يكون اليوم أو مستقبلي)\nname: اسم الإجازة (اختياري)"
					}
				},
				{
					"name": "Update Holiday",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"holiday_date\": \"2026-03-20\",\n    \"name\": \"إجازة عيد\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/consultant/holidays/1",
							"host": ["{{base_url}}"],
							"path": ["consultant", "holidays", "1"]
						},
						"description": "تحديث إجازة موجودة"
					}
				},
				{
					"name": "Delete Holiday",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/consultant/holidays/1",
							"host": ["{{base_url}}"],
							"path": ["consultant", "holidays", "1"]
						},
						"description": "حذف إجازة"
					}
				}
			]
		}
	]
}
