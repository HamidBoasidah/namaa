		{
			"name": "Conversations",
			"item": [
				{
					"name": "Get or Create Conversation",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.data && jsonData.data.id) {",
									"    pm.collectionVariables.set('conversation_id', jsonData.data.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/bookings/{{booking_id}}/conversation",
							"host": ["{{base_url}}"],
							"path": ["bookings", "{{booking_id}}", "conversation"]
